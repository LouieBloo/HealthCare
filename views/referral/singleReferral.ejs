
<%

//var pagecss = ['/stylesheets/index.css'];
var pagejs = ['/javascripts/index.js'];



var referralData = referralObject;

var hours = referralData.referral.Hours ? referralData.referral.Hours + " " + referralData.referral.HourType : '?';

var getReferralColor = function(referral){
	if(referral == 'unread'){
		return 'text-warning'
	}
	else if(referral =='read')
	{
		return 'text-danger';
	}
	else if(referral =='completed')
	{
		return 'text-success';
	}
};

	
%>


<%- include('../header',{extraCSS:[],extraJS:[]}); %>


<body>

	<%- include('../navbar',{page:'Referrals'}); %>


    

    <!-- Page Content -->
    <div class="container-fluid mt-4">

    <%if(referralData){%>

    	<div class="row">

    		<!--options card-->
    		<div class="col-md-4">
			    <div class="card" style="height:auto;">
				 	<div class="card-header bg-info text-white"><h5>Referral Information</h5></div>
				  	<div class="card-body">

				    	<div class="row">
				    		<div class="col-md-12">
				    			<table class="table table-responsive">
						  			<tbody>
						  				<tr>
							    			<th><strong>Type:</strong></th>
							    			<td><%=referralData.referral.ReferralType%></td>
							    		</tr>
							    		<tr>
							    			<th><strong>Created:</strong></th>
							    			<td><%=new Date(referralData.referral.DateAdded).toLocaleString();%></td>
							    		</tr>
							    		<tr>
							    			<th><strong>Status:</strong></th>
							    			<td class="<%=getReferralColor(referralData.referral.Status);%>"><%=referralData.referral.Status%></td>
							    		</tr>
							    		<tr>
							    			<th><strong>Hours:</strong></th>
							    			<td><%=hours%></td>
							    		</tr>
						  			</tbody>
								</table>
				    		</div>
				    	</div>
				    	
				    	<div class="row">
				    		<div class="col-12 d-flex justify-content-center">
				    			<button onclick='' class="btn btn-sm btn-success mx-2">Mark as completed</button>
				    			<button onclick='' class="btn btn-sm btn-warning mx-2">Mark as in-progress</button>
				    			<button onclick='' class="btn btn-sm btn-danger mx-2">Mark as unread</button>
				    		</div>
				    	</div>
				  	</div>
				</div>
    		</div><!--end options card-->



    		<div class="col-md-4">
			    <div class="card">
				 	<div class="card-header bg-primary text-white"><h5>Client Information</h5></div>
				  	<div class="card-body">
				    	<h4 class="card-title"><%=referralData.client.FName + " " + referralData.client.LName;%></h4>
				    	<h6 class="card-subtitle mb-2 text-muted"><%=referralData.client.UCI%></h6>

				    	<div class="row">
				    		<div class="col-md-4">
				    			<p>Name</p>
				    			<p></p>
				    		</div>
				    		<div class="col-md-4">
				    			<p>first name
				    		</div>
				    		<div class="col-md-4">
				    			<p>first name
				    		</div>
				    	</div>

				    	<div class="row">
				    		<div class="col-md-12">
				    			<p>Diganosis</p>
				    			<p><%=referralData.client.Diagnosis%></p>
				    		</div>
				    	</div>




				    	<p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
				    	<a href="#" class="btn btn-primary">Go somewhere</a>
				  	</div>
				</div>
    		</div>
    	</div>
    <%}else{%>
    	<div class="row">
    		<div class="col-md-6 mx-auto">
    			<h4 class="text-danger">Couldn't find that referral</h4>
    		</div>
    	</div>
    <%}%>
    	<div class="row mt-4">
    		<div class="col-md-6 mx-auto ">
    			<a href="/referral" class="btn btn-primary">Back to Referrals</a>
    		</div>
    	</div>

	</div>



<%- include('../footer'); %>
